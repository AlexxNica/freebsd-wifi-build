# XXX should symlink gzip to gunzip
install ${X_DESTDIR}/usr/bin/gzip ${X_STAGING_FSROOT}/usr/bin/
install ${X_DESTDIR}/usr/bin/gunzip ${X_STAGING_FSROOT}/usr/bin/
install ${X_DESTDIR}/usr/libexec/getty ${X_STAGING_FSROOT}/usr/libexec/

# vmstat is useful
install ${X_DESTDIR}/usr/bin/vmstat ${X_STAGING_FSROOT}/usr/bin/
install ${X_DESTDIR}/usr/bin/systat ${X_STAGING_FSROOT}/usr/bin/
install ${X_DESTDIR}/lib/libdevstat.so.7 ${X_STAGING_FSROOT}/lib/

# libraries are for grep, tar
install ${X_DESTDIR}/usr/bin/tar ${X_STAGING_FSROOT}/usr/bin/
install ${X_DESTDIR}/usr/bin/grep ${X_STAGING_FSROOT}/usr/bin/
install ${X_DESTDIR}/usr/lib/libgnuregex.so.5 ${X_STAGING_FSROOT}/usr/lib/
install ${X_DESTDIR}/usr/lib/libbz2.so.4 ${X_STAGING_FSROOT}/usr/lib/
install ${X_DESTDIR}/lib/libz.so.6 ${X_STAGING_FSROOT}/lib/
